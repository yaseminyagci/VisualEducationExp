<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbd3de"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tatlicilar.visualeducation.MainActivity">

    <Button
        android:text="KAYIT OL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_desing_register"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/forgotPass" />

    <Button
        android:text="ŞİFREMİ UNUTTUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPass"
        android:background="@drawable/button_desing_register"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="YA DA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/logFacebook"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logFacebook"
        android:background="@drawable/iconfacebook"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="14dp" />

    <CheckBox
        android:text="     Beni Hatırla"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/rememberCheck"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/userPass"
        android:layout_alignEnd="@+id/logFacebook" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
        android:hint="Kullanıcı Adı"
        android:width = "50dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/button_desing_name_pass"
        android:ems="10"
        android:id="@+id/userName"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:layout_above="@+id/userPass"
        android:layout_alignStart="@+id/rememberCheck"
        android:layout_marginBottom="12dp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:width = "100dp"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:textColor="@color/colorBlack"
        android:inputType="textPassword"
        android:gravity="center_horizontal"
        android:hint="Şifre"

        android:background="@drawable/button_desing_name_pass"
        android:ems="10"
        android:id="@+id/userPass"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/userName" />

    <Button
        android:text="GİRİŞ"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/login"
        android:background="#27a0e1"
        android:layout_weight="0.29"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/rememberCheck"
        android:layout_alignStart="@+id/rememberCheck" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logGmail"
        android:background="@drawable/icongoogle"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/login"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/educationimages"
        android:id="@+id/edcImage"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
